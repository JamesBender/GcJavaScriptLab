@model JavaScriptLab.Models.User

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "registrationForm"}))
{
    <ul id="errorList"></ul>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            <div>
                @Html.EditorFor(model => model.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            <div>
                @Html.EditorFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MiddleName)
            <div>
                @Html.EditorFor(model => model.MiddleName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AddressLineOne)
            <div>
                @Html.EditorFor(model => model.AddressLineOne)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AddressLineTwo)
            <div>
                @Html.EditorFor(model => model.AddressLineTwo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.City)
            <div>
                @Html.EditorFor(model => model.City)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.State)
            <div>
                @Html.EditorFor(model => model.State)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Zip)
            <div>
                @Html.EditorFor(model => model.Zip)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.WorkPhone)
            <div>
                @Html.EditorFor(model => model.WorkPhone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CellPhone)
            <div>
                @Html.EditorFor(model => model.CellPhone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress)
            <div>
                @Html.EditorFor(model => model.EmailAddress)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserId)
            <div>
                @Html.EditorFor(model => model.UserId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            <div>
                @Html.PasswordFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.YearsOfExperience)
            <div>
                @Html.TextBoxFor(model => model.YearsOfExperience)
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
}